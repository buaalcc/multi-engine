<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans   
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd   
        http://www.springframework.org/schema/context   
        http://www.springframework.org/schema/context/spring-context-3.0.xsd   
        ">

    <!-- ========================= Spring basic configurations ========================= -->

    <context:component-scan base-package="com.baidu.unbiz"/>

    <bean name="endpointConsole" class="com.baidu.unbiz.multiengine.endpoint.EndpointConsole"
          init-method="init" destroy-method="stop">
        <property name="serverHost" value="127.0.0.1:8801;127.0.0.1:8802;127.0.0.1:8803"/>
        <property name="clientHost" value="127.0.0.1:8801;127.0.0.1:8802;127.0.0.1:8803"/>
    </bean>

